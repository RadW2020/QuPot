{
  "name": "blockchain-service",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "nest start",
    "dev-temp-disabled": "nest start --watch",
    "debug": "nest start --debug --watch",
