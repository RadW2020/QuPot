{
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": false,
    "tsConfigPath": "tsconfig.json",
    "assets": ["**/*.proto"],
    "watchAssets": true,
    "preserveWatchOutput": true,
    "builder": {
      "type": "tsc",
      "options": {
        "preserveModulesRoot": "src"
      }
    }
  }
}
